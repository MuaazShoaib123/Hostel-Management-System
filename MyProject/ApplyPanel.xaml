<Window x:Class="MyProject.ApplyPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        xmlns:fa ="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ApplyPanel" Height="550" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <DockPanel Background="#FF12548B">
            <fa:ImageAwesome Grid.Column="1" Grid.Row="1" Icon="GraduationCap" Foreground="White" HorizontalAlignment="Center" Width="80" VerticalAlignment="Center" Height="53" Margin="0,7,0,12"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Background="#FF12548B">

            <Button x:Name="BackButton" Content="Log Out" Background="Transparent" BorderBrush="Transparent" Foreground ="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </DockPanel>
        <DockPanel Background="#FF12548B" Grid.Column="0" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2.8*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>
                <fa:ImageAwesome Icon="AddressCard" Foreground="White" Grid.Column="1" Grid.Row="2" Margin="21,13,0,9"/>
                <fa:ImageAwesome Icon="Check" Foreground="White" Grid.Column="1" Grid.Row="3" Margin="23,15,1,8"/>
                <fa:ImageAwesome Icon="SortDown" Foreground="White" Grid.Column="1" Grid.Row="4" Margin="22,14,3,8" />
                <fa:ImageAwesome Icon="Ticket" Foreground="White" Grid.Column="1" Grid.Row="5" Margin="15,12,0,5"/>
                <fa:ImageAwesome Icon="Edit" Foreground="White" Grid.Column="1" Grid.Row="6" Margin="14,8,0,10"/>
                <Label x:Name="StudentNameLabel" Content="Email" Grid.Row= "0" Grid.Column="2" Foreground="White" FontSize="25" FontWeight="Bold" />
                <Button Grid.Column="2" Grid.Row="2" x:Name="ApplyBtn1" Content="Apply For Hostel" Background="Transparent" Foreground="White" FontSize="14" BorderBrush="Transparent" Click="ApplyBtn1_Click" />
                <Button Grid.Column="2" Grid.Row="3" x:Name="StatusBtn1" Content="Hostel Status" Background="Transparent" Foreground="White" FontSize="14" BorderBrush="Transparent"  />
                <Button Grid.Column="2" Grid.Row="4" x:Name="RetreiveFeeBtn" Content="Retreieve Fee" Background="Transparent" Foreground="White" FontSize="14" BorderBrush="Transparent" />
                <Button Grid.Column="2" Grid.Row="5" x:Name="SubmitFeeBtn" Content="Submit Fee" Background="Transparent" Foreground="White" FontSize="14" BorderBrush="Transparent" />
                <Button Grid.Column="2" Grid.Row="6" x:Name="ComplainBtn" Content="Do Complain" Background="Transparent" Foreground="White" FontSize="14" BorderBrush="Transparent" />
            </Grid>
        </DockPanel>
        <DockPanel Background="#FF12548B" Grid.Column="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DockPanel Background="#FF12548B">
                    <DockPanel Background="AliceBlue" Margin="1">
                        <DockPanel Background="#FF12548B" Margin="3">
                            <Label x:Name="RegLabel"  Content="RegNo" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </DockPanel>
                    </DockPanel>
                </DockPanel>
                <DockPanel Background="White" Grid.Row="1"/>
            </Grid>
        </DockPanel>
        <DockPanel x:Name="ApplyPanel1" Background="#FF12548B" Grid.Row="1" Grid.Column="2" Visibility="Collapsed" />
        <DockPanel x:Name="ApplyPanel2" Background="AliceBlue" Grid.Row="1" Grid.Column="2" Margin="1" Visibility="Collapsed">
            <DockPanel Background="#FF12548B" Margin="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DockPanel>
                        <TextBlock Text="APPLICATION PANEL" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="27" FontWeight="Bold"/>
                    </DockPanel>
                    <DockPanel Background="#FF12548B" Grid.Row="1" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="1.2*"/>
                                <RowDefinition Height="0.1*"/>
                                <RowDefinition Height="1.3*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="1" Grid.Column="0" Content="First Name" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="Last Name" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="3" Grid.Column="0" Content="Reg Number" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="4" Grid.Column="0" Content="Emial" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="5" Grid.Column="0" Content="Contact No" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="6" Grid.Column="0" Content="Date of Birth" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="7" Grid.Column="0" Content="Gender" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            <TextBox x:Name="FirstNameBox" Grid.Row="1" Grid.Column="1" Margin="5,5,39,5"/>
                            <TextBox x:Name="LastNameBox" Grid.Row="2" Grid.Column="1" Margin="5,5,39,5" />
                            <TextBox x:Name="RegNoNameBox" Grid.Row="3" Grid.Column="1" Margin="5,5,39,5" />
                            <TextBox x:Name="EmailNameBox" Grid.Row="4" Grid.Column="1" Margin="5,5,39,5" />
                            <TextBox x:Name="ContactNameBox" Grid.Row="5" Grid.Column="1" Margin="5,5,39,5" />
                            <DatePicker x:Name="BirthDatePicker" Grid.Row="6" Grid.Column="1" Margin="3,3,39,3"/>
                            <RadioButton x:Name="MaleButton" Content="Male" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="7" Grid.Column="1" Foreground="White" FontSize="10"/>
                            <RadioButton x:Name="FemaleButton" Content="Female" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="7" Grid.Column="1" Foreground="White" FontSize="10" />
                            <Button x:Name="NextBtn" Grid.Row="9" Grid.Column="1" Content="NEXT" Foreground="White" Background="Transparent" FontSize="15" BorderBrush="White" FontWeight="Bold" Click="NextBtn_Click" Margin="1"/>
                            <Button x:Name="CloseApplyPanelBtn" Grid.Row="9" Grid.Column="0" Content="CLOSE" Foreground="White" Background="Transparent" FontSize="15" BorderBrush="White" FontWeight="Bold" Margin="1" Click="CloseApplyPanelBtn_Click"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </DockPanel>
        </DockPanel>
        <DockPanel x:Name="NextPanel" Background="#FF12548B" Grid.Row="1" Grid.Column="2" Margin="20" Visibility="Collapsed">
            <DockPanel Background="AliceBlue" Margin="1">
                <DockPanel Background="#FF12548B" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel>
                            <TextBlock Text="APPLICATION PANEL" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="Bold"/>
                        </DockPanel>
                        <DockPanel Grid.Row="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.7*"/>
                                    <RowDefinition Height="0.6*"/>
                                    <RowDefinition Height="0.6*"/>
                                    <RowDefinition Height="0.6*"/>
                                    <RowDefinition Height="0.6*"/>
                                    <RowDefinition Height="0.7*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="1" Grid.Column="0" Content="Student Status" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Student CGPA" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1"  Margin="6"/>
                                <Label Grid.Row="4" Grid.Column="0" Content="Matric Marks" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBox x:Name="Matrictxt" Grid.Row="4" Grid.Column="1"  Margin="6"/>
                                <Label Grid.Row="5" Grid.Column="0" Content="Fsc Marks" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBox x:Name="FscTxtbox" Grid.Row="5" Grid.Column="1" Margin="6"/>
                                <Label Grid.Row="3" Grid.Column="0" Content="Ectat Marks" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBox x:Name="Ecattxtbox" Grid.Row="3" Grid.Column="1" Margin="6"/>
                                <RadioButton x:Name="RegularBtn" Content="Regular" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Foreground="White" FontSize="10"/>
                                <RadioButton x:Name="NonRegularBtn" Content="Non Regular" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Foreground="White" FontSize="10" />
                                <Button x:Name="ApplyBtn" Grid.Row="7" Grid.Column="1" Content="APPLY" Foreground="White" Background="Transparent" FontSize="14" BorderBrush="White" FontWeight="Bold" Margin="1" Click="ApplyBtn_Click_1"/>
                                <Button x:Name="BackNextPanelBtn" Grid.Row="7" Grid.Column="0" Content="Back" Foreground="White" Background="Transparent" FontSize="13" BorderBrush="White" FontWeight="Bold" Click="BackNextPanelBtn_Click" Margin="1"/>
                                <Button x:Name="CloseNextPanelBtn" Grid.Row="7" Grid.Column="2" Content="Close" Foreground="White" Background="Transparent" FontSize="13" BorderBrush="White" FontWeight="Bold" Margin="1" Click="CloseNextPanelBtn_Click"/>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </DockPanel>
        <DockPanel Background="#FF12548B" Grid.Row="1" Grid.Column="2" x:Name="ComplainPanel" Visibility="Collapsed" Margin="45">
            <DockPanel Background="AliceBlue" Margin="2">
                <DockPanel Margin="4" Background="#FF12548B">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.25*"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <DockPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="0.1*"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="0.5*"/>
                                        </Grid.RowDefinitions>
                                        <fa:ImageAwesome x:Name="CloseComplainIcon" Icon="WindowClose" Foreground="White"/>
                                    </Grid>
                                </DockPanel>
                                <TextBlock Text="COMIT COMPLAIN" Foreground="White" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Bottom"/>
                            </Grid>
                        </DockPanel>
                        <DockPanel Grid.Row="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.4*"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="1" Content="Subject" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label Grid.Row="2" Content="Solution" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <DockPanel Grid.Row="3" Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.4*"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="0.4*"/>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="SubmitComplainBtn" Grid.Row="1" Content="SUBMIT" Foreground="White" Background="Transparent" BorderBrush="White" />
                                    </Grid>
                                </DockPanel>

                                <DockPanel Grid.Row="1" Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.35*"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="0.35*"/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="1" Margin="4"/>
                                    </Grid>
                                </DockPanel>
                                <DockPanel Grid.Row="2" Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.35*"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="0.35*"/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="1" Margin="4"/>
                                    </Grid>
                                </DockPanel>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </DockPanel>
        <DockPanel x:Name="HostelStatusPanel" Background="#FF12548B" Grid.Row="1" Grid.Column="2" Margin="40" Visibility="Collapsed">
            <DockPanel Background="AliceBlue" Margin="2">
                <DockPanel Background="#FF12548B" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="0.11*"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="0.6*"/>
                                        </Grid.RowDefinitions>
                                        <fa:ImageAwesome x:Name="CloseHostelStatusPanelIcon" Icon="WindowClose" Foreground="White" />
                                    </Grid>
                                </DockPanel>
                            </Grid>
                        </DockPanel>
                        <TextBlock Text="HOSTEL STATUS" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"/>
                        <DockPanel Grid.Row="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.3*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="0.3*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="1" Grid.Column="1" Content="Hostel Name" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label Grid.Row="2" Grid.Column="1" Content="Hostel Type" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label Grid.Row="3" Grid.Column="1" Content="Floor Number" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label Grid.Row="4" Grid.Column="1" Content="Room Number" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label x:Name="HostelNameLabel" Grid.Row="1" Grid.Column="2" Content="Null" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label x:Name="HostelTypeLabel" Grid.Row="2" Grid.Column="2" Content="Null" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label x:Name="FloorNumberLabel" Grid.Row="3" Grid.Column="2" Content="Null" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Label x:Name="RoomNumberLabel" Grid.Row="4" Grid.Column="2" Content="Null" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
